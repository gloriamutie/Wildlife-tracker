    {{#if editEndangered}}
        <h1>Wrong details? edit here</h1>
        <form class="formstyle" action="/endangered/{{editEndangered.id}}" method="post">
            <div class="form-group">
                <label for="name">Edit name</label>
                <input id="name" placeholder="Enter Endangered animal name here......" name="name" class="form-control" type="text" value="{{editEndangered.name}}">
            </div>
            <div class="form-group">
                <label for="age">Enter endangered animal's age</label>
                <select id="age" name="age" class="form-control">
                    <option value="newborn">newborn</option>
                    <option value="young">young</option>
                    <option value="adult">adult</option>
                </select>
            </div>
            <div class="form-group">
                <label for="health">Edit health</label>
                <select id="health" name="health" class="form-control">
                    <option value="Okay">healthy</option>
                    <option value="ill">ill</option>
                    <option value="healthy">okay</option>

                </select>
            </div>
            <button type="submit" class="button btn-warning">Submit</button>
        </form>
    {{else}}
        <h1>New endangered</h1>
        <form class="formstyle" action="/endangered" method="post">
            <div class="form-group">
                <label for="name"> Endangered animal name</label>
                <input id="name" placeholder="Enter Endangered animal name here......" name="name" class="form-control" type="text" value="">
            </div>
            <div class="form-group">
                <label for="health">Edit this endangered animal's health</label>
                <select id="health" name="health" class="form-control">
                    <option value="Okay">Okay</option>
                    <option value="ill">ill</option>
                    <option value="healthy">healthy</option>
                </select>
            </div>

            <div class="form-group">
                <label for="age"> endangered animal's age</label>
                <select id="age" name="age" class="form-control">
                    <option value="newborn">newborn</option>
                    <option value="young">young</option>
                    <option value="adult">adult</option>
                </select>
            </div>
            <button type="submit" class="button btn-warning">Submit</button>
        </form>
    {{/if}}
{{/partial}}

