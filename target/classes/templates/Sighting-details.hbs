{{#partial "content"}}
    <div class="row">
        <div class="col-md-6">
               <div class="Details">

                     <p>Reported by: {{ sighting.rangerName }}</p>
                     <p>Time reported: {{ sighting.createdAt }}</p>
                     <p>Location of sighting: {{ sighting.location }}</p>

                     {{#if animal}}
                     <p> Name of sighting:{{ animal.name }}</p>
                     <p>Type of sighting: {{animal.type}}</p>
                         <div class="row">
                              <div class="col-md-12">
                              <div class = "col-md-12">
                              <a class="btn btn-warning" href="/animals/sighting/{{sighting.id}}/edit">Edit</a>
                              <a class="btn btn-warning" href="/animals/{{sighting.animalId}}/sightings/{{sighting.id}}/delete">Delete</a>
                         </div>
                      </div>
                 </div>
               {{else}}
                          <p>Endangered animal: {{ endangered.name }}</p>
                          <p>Type: {{endangered.type}}</p>
                          <div class="row">
                          <div class="col-md-12">
                           <div class = "col-md-12">
                            <a class="btn btn-warning" href="/endangered/sighting/{{sighting.id}}/edit">Edit</a>
                            <a class="btn btn-warning" href="/animals/{{sighting.animalId}}/sightings/{{sighting.id}}/delete">Delete</a>
                           </div>
                         </div>
                      </div>
    {{/if}}
    </div>
    </div>
    </div>


{{/partial}}

{{> layout.hbs}}